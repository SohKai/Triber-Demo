<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:background="@drawable/user_list_bg_normal">

    <com.brettsun.triber_demo.CircleNetworkImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:border_width="1dp"
        app:border_color="@color/White"
        />

    <TextView android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/user_profile_pic"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/TriberRedText"
        android:textStyle="bold"
        android:singleLine="true"
        />

    <TextView android:id="@+id/user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/user_profile_pic"
        android:layout_below="@id/user_username"
        android:layout_alignLeft="@id/user_username"
        android:textColor="@color/White"
        android:singleLine="true"
        />

    <TextView android:id="@+id/user_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/user_profile_pic"
        android:layout_alignLeft="@id/user_username"
        android:textColor="@color/White"
        android:singleLine="true"
        />

</RelativeLayout>